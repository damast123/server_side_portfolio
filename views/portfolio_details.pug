extends base

block append head

block content
    main.main
        section#portfolio-details.portfolio-details.section
            .container.section-title(data-aos="fade-up")
                h2 Portfolio Details
                p Necessitatibus eius consequatur ex aliquid fuga eum quidem sint consectetur velit
            .container(data-aos="fade-up", data-aos-delay="100")
                .row.gy-4
                    .col-lg-8
                        .portfolio-details-slider.swiper.init-swiper
                            script(type="application/json", class="swiper-config").
                                {
                                "loop": true,
                                "speed": 600,
                                "autoplay": {
                                "delay": 5000
                                },
                                "slidesPerView": "auto",
                                "pagination": {
                                "el": ".swiper-pagination",
                                "type": "bullets",
                                "clickable": true
                                }
                                }
                            .swiper-wrapper.align-items-center
                                .swiper-slide
                                    img(src="assets/img/portfolio/app-1.jpg", alt=)
                                .swiper-slide
                                    img(src="assets/img/portfolio/product-1.jpg", alt=)
                                .swiper-slide
                                    img(src="assets/img/portfolio/branding-1.jpg", alt=)
                                .swiper-slide
                                    img(src="assets/img/portfolio/books-1.jpg", alt=)
                            .swiper-pagination
                    .col-lg-4
                        .portfolio-info(data-aos="fade-up", data-aos-delay="200")
